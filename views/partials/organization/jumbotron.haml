%div{class:"col-12 col-lg-4 text-center sidebar", itemscope: true, itemtype: "http://schema.org/Organization"}
  %h1{class:"mt-3 h2", itemprop: "name"} #{@organization.name}
  %p{class:"text-muted", itemprop: "address"} #{@organization.address}
  - if @organization.website
    %p
      %a{href: "#{@organization.website}", itemprop: "url"} #{@organization.website}

  - if @organization.image_url || @organization.latitude
    - if @organization.image_url
      %div{class:"m-1"}
        %img{src:"https://abekpgaoen.cloudimg.io/bound/350x200/q100/#{@organization.image_url}", class:"rounded mx-auto img-fluid", alt:"#{@organization.name}"}
    - if @organization.latitude
      %div{style:"max-width:350px; height:200px;", class:"m-1 mx-auto"}
        %div{id:"mapid", class:"w-100 h-100"}
  - if @organization.wikidata
    %p
      %a{href: "https://www.wikidata.org/wiki/#{@organization.wikidata}"}
        %img{src: "/images/wikidata_24x24.png", alt:"Wikidata iD"}
      %a{href: "https://www.wikidata.org/wiki/#{@organization.wikidata}"} https://www.wikidata.org/wiki/#{@organization.wikidata}

  - if admin_authorized?
    %div{class:"mt-3 pt-3 border-top"}
      %a{href: url("/admin/organization/#{@organization.id}")}
        %i{class:"fas fa-cog"}
        = I18n.t('general.settings')
