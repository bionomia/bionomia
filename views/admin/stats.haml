- content_for :title do
  Statistics
- content_for :scripts do
  :javascript
    $(function() {
      Application.init();
    });
- content_for :jumbotron do
  .jumbotron.jumbotron-fluid.alert-warning.d-flex.flex-wrap
    .mr-auto
      %h1.h2 Statistics

%h4 Active Database Connections

%ul.list-group.mt-3
  - ActiveRecord::Base.connection_pool.stat.each do |k,v|
    %li.list-group-item.d-flex.justify-content-between.align-items-center
      #{k}
      %span.badge.badge-success.badge-pill #{v}

%h4.mt-3 Elasticsearch

- @health.to_a.in_groups_of(3, true).each do |group|
  .card-deck.mb-3
    - group.each do |index,stats|
      .card.border-0
        .card-header.mb-0.pb-0
          %h5.text-center #{index}
        .card-body
          %ul.list-group.mt-3
            - stats.each do |k,v|
              %li.list-group-item.d-flex.justify-content-between.align-items-center
                #{k}
                - if v == "yellow"
                  %span.badge.badge-warning.badge-pill #{v}
                - elsif v == "red"
                  %span.badge.badge-error.badge-pill #{v}
                - else
                  %span.badge.badge-success.badge-pill #{v}
