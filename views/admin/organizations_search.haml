- content_for :title do
  Organizations
- content_for :scripts do
  %script{src: "/js/application.js"}
  :javascript
    $(function() {
      Application.init(#{@user.id}, "POST", "/admin");
    });
- content_for :jumbotron do
  .jumbotron.jumbotron-fluid.alert-warning.d-flex.flex-wrap
    .mr-auto
      %h1.h2 Organizations
    = haml :'partials/admin/organization_search', layout: false

- if @results.size == 0
  .alert.alert-warning.tiny-margins{role: "alert"}
    No organizations found.
- else
  - @results.in_groups_of(3).each do |group|
    .card-deck
      - group.each do |o|
        - if o.nil?
          .card.border-0
        - else
          - org = Organization.find(o[:_id].to_i)
          - if !o.nil?
            .card.card-profile.m-3
              - if org.image_url
                .card-header.d-flex
                  %div
                    %img.mr-2.rounded{src:"#{organization_image(org, 'medium')}", alt:"#{org.name}"}
                  .flex-grow-1
                    %h5
                      %a{href: url("/admin/organization/#{org.id}")} #{org.name}
                    %p.text-muted #{org.address}
              - else
                .card-header
                  %h5
                    %a{href: url("/admin/organization/#{org.id}")} #{org.name}
                  %p.text-muted #{org.address}
              .card-body
              .card-footer
                .col.small.text-left.text-muted
                .col.small.text-right.text-muted
                  - count = org.active_users.count
                  %span.badge.badge-light #{number_with_delimiter(count)}
                  #{'member'.pluralize(count)}


  = pagy_bootstrap_nav(@pagy) if @pagy && @pagy.pages > 1
