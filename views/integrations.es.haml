            {src: "/images/chrome_extension_screenshot.png", alt: "Bionomia Google Chrome Extension"}
  %div
    {class: "col-12 col-md-6 mb-3"}
    %div
      {class:"card"}
      %div
        {class:"card-header border-bottom"}
