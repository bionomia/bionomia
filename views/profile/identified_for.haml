- content_for :title, I18n.t('profile.identified_for')
- content_for :scripts do
  = haml :'partials/profile/scripts', layout: false, locals: { action_type: "PUT" }

.row
  .col-12.col-lg-4
    %h1.h3
      = @user.viewname
  .col-12.col-lg-8.mt-2
    = haml :'partials/profile/tabs', layout: false, locals: { active_page: "specimens" }
    = haml :'partials/profile/subtabs_specimens', layout: false, locals: { active_tab: "identified_for"}

- if @pagy.count == 0
  .alert.alert-info.tiny-margins{role: "alert"}= I18n.t('profile.no_identified_for_alert')
- else
  .alert.alert-info.tiny-margins{role: "alert"}= I18n.t('profile.identified_for_alert')

  - @results.in_groups_of(4) do |group|
    .card-deck
      - group.each do |u|
        - if u.nil?
          .card.border-0
        - else
          .card.card-profile.my-3
            - if u.image_url
              .card-header.d-flex
                %div
                  %img.card-img-profile.mr-2{src:"#{profile_image(u, 'medium')}", alt:"#{u.viewname}", width:48, height:48, loading:"lazy"}
                .flex-grow-1
                  %h5
                    = link_to u.viewname, url("/profile/identified-for/#{u.identifier}")
                  - if u.wikidata
                    %p.small.text-muted.mt-0.mb-0= format_lifespan(u)
                  - if u.country
                    %p.small.text-muted.mt-0.mb-0
                      - country_codes = u.country_code.split("|") rescue []
                      - countries = u.country.split("|") rescue []
                      - countries.each_with_index do |v,i|
                        = succeed (countries[i+1]) ? '; ' : '' do
                          - if !country_codes[i].nil? && !country_codes[i].empty?
                            #{country_name(country_codes[i])}
                          - else
                            #{v}
            - else
              .card-header
                %h5
                  = link_to u.viewname, url("/profile/identified-for/#{u.identifier}")
                - if u.wikidata
                  %p.small.text-muted.mt-0.mb-0= format_lifespan(u)
                - if u.country
                  %p.small.text-muted.mt-0.mb-0
                    - country_codes = u.country_code.split("|") rescue []
                    - countries = u.country.split("|") rescue []
                    - countries.each_with_index do |v,i|
                      = succeed (countries[i+1]) ? '; ' : '' do
                        - if !country_codes[i].nil? && !country_codes[i].empty?
                          #{country_name(country_codes[i])}
                        - else
                          #{v}

            .card-body.d-flex
            .card-footer.d-flex
              - if !u.is_public?
                .small.text-right.text-muted.mr-2
                  %i.fa-solid.fa-lock
              .small.text-left.text-muted.mr-2
                %span.badge.badge-light #{number_with_delimiter(@user.identifications_for(u).count, delimiter: ",")}
                = I18n.t('profile.identified_for_count', count: @user.identifications_for(u).count)

  - if @pagy.pages > 1
    .overflow-auto
      = pagy_bootstrap_nav(@pagy)
