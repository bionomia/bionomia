- content_for :title, I18n.t('profile.identifications_by')
- content_for :scripts do
  = haml :'partials/profile/scripts', layout: false, locals: { action_type: "PUT" }

.row
  .col-12.col-lg-4
    %h1.h3
      = @user.fullname
  .col-12.col-lg-8.mt-2
    = haml :'partials/profile/tabs', layout: false, locals: { active_page: "specimens" }
    = haml :'partials/profile/subtabs_specimens', layout: false, locals: { active_tab: "determiners"}

- if @pagy.count == 0
  .alert.alert-warning{role: "alert"}
    = I18n.t('profile.not_determiner_name', name: @determiner.fullname)
- else
  .alert.alert-warning{role: "alert"}
    = I18n.t('profile.determiner_name', name: @determiner.fullname)

  #helper-info.alert.alert-info.tiny-margins{role: "alert"}
    = haml :'partials/choose_instructions', layout: false

  = haml :'partials/tables/specimens', layout: false
