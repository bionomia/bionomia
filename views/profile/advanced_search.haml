- content_for :title, I18n.t('profile.advanced_search')
- content_for :scripts do
  :javascript
    var Filters = { "datasetKey": "#{params[:datasetKey]}", "agent_id": "#{params[:agent_id]}", "taxon_id": "#{params[:taxon_id]}", "kingdom": "#{params[:kingdom]}", "country_code": "#{params[:country_code]}" };
  = haml :'partials/profile/scripts', layout: false, locals: { action_type: "POST" }

.row
  .col-12.col-lg-4
    %h1.h3
      = @user.fullname
  .col-12.col-lg-8.mt-2
    = haml :'partials/profile/tabs', layout: false, locals: { active_page: "specimens" }
    = haml :'partials/profile/subtabs_specimens', layout: false, locals: { active_tab: "candidates"}

= haml :'partials/advanced_search', layout: false, locals: { url: "/profile", dest: "/profile/candidates"}
