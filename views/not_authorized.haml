- content_for :title, I18n.t('not_authorized.not_authorized')
- content_for :scripts do
  :javascript
    $(function() {
      Application.init();
    });

.alert.alert-warning{role: "alert"}
  = I18n.t('not_authorized.not_authorized')

%form{action: "/auth/orcid?lang=#{I18n.locale}", method: :post }
  %p
    %button.btn.btn-lg.btn-outline-dark.connect-orcid-button
      %i.fa-brands.fa-orcid
      = I18n.t('home.orcid_login')
    %input{type:"hidden", name:"authenticity_token", value:"#{env['rack.session'][:csrf]}"}
